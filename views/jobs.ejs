<!doctype html>
<html class="no-js" lang="en">
  <%- include( 'partials/head.ejs' ) %>


    <body>
        <!--[if lt IE 8]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->

        <div class="wrapper">

            <%- include( 'partials/header.ejs' ) %>


            <div class="page-wrap">
              <%- include( 'partials/sidebar.ejs' ) %>

                <div class="main-content">
                    <div class="container-fluid">
                        <div class="page-header">
                            <div class="row align-items-end">
                                <div class="col-lg-8">
                                    <div class="page-header-title">
                                        <i class="ik ik-server bg-blue"></i>
                                        <div class="d-inline">
                                            <h5>Taskboard</h5>
                                            <span>lorem ipsum dolor sit amet, consectetur adipisicing elit</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <nav class="breadcrumb-container" aria-label="breadcrumb">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item">
                                                <a href="../index.html"><i class="ik ik-home"></i></a>
                                            </li>
                                            <li class="breadcrumb-item">
                                                <a href="#">Apps</a>
                                            </li>
                                            <li class="breadcrumb-item active" aria-current="page">Taskboard</li>
                                        </ol>
                                    </nav>
                                </div>
                            </div>
                        </div>


<div class="row my-2">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="dt-responsive">
                    <table id="simpletable" class="table table-striped table-bordered nowrap">
                        <thead>
                            <tr>
                                <th>Booking Id</th>
                                <th>Pro Name</th>
                                <th>Service</th>
                                <th>Booking Date/Time</th>
                                <th>Duration(hours)</th>
                                <th>Address</th>
                                <th>Contact</th>
                                <th>Additional Notes</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% bookings.forEach(function(booking,index){ %>
                                <tr>
                                    <td>
                                        <%= booking.bookingId %>
                                    </td>
                                    <td>
                                        <%= booking.providerId.name %>
                                    </td>
                                    <td>
                                        <%= booking.serviceId.title %>
                                    </td>
                                    <td>
                                        <%= booking.bookingDate %>
                                            <p>
                                                <%= booking.bookingTime %>
                                            </p>
                                    </td>
                                    <td>
                                        <%= booking.durationInHours %>
                                    </td>
                                    <td>
                                        <%= booking.address %>
                                    </td>
                                    <td>
                                        <%= booking.providerId.telephone %>
                                    </td>
                                    <td>
                                        <%= booking.additionalNotes %>
                                    </td>
                                    <td>
                                        <% switch (booking.status) { case 'booked' : %>
                                            <label class="badge badge-primary">Booked</label>
                                            <% break; case 'confirmed' : %>
                                                <label class="badge badge-info">Confirmed</label>
                                                <% break; case 'in_progress' : %>
                                                    <label class="badge badge-warning">In progress</label>
                                                    <% break; case 'completed' : %>
                                                        <label class="badge badge-success">Completed</label>
                                                        <% break; case 'cancelled' : %>
                                                            <label class="badge badge-danger">Cancelled</label>
                                                            <% break; } %>
                                    </td>
                                    <td><div class="dropdown">
                                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
                                            aria-haspopup="true" aria-expanded="false">
                                            Change Status <i class="ik ik-edit-2"></i>
                                        </button>
                                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                            <a class="dropdown-item" href="/change-job-status?status=in_progress&id=<%=booking.bookingId%>">In Progress</a>
                                            <a class="dropdown-item" href="/change-job-status?status=completed&id=<%=booking.bookingId%>">Completed</a>
                                            <a class="dropdown-item" href="/change-job-status?status=cancelled&id=<%=booking.bookingId%>">Cancelled</a>
                                        </div>
                                    </div></td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
                    </div>
                </div>


                
            </div>
        </div>
        


        <div class="modal fade" id="changeTaskStatus" tabindex="-1" role="dialog"
        aria-labelledby="changeTaskStatusCenterLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="changeTaskStatusModalCenterLabel">Change Task Status</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                </div>

                <div class="modal-body">
                    <div class="forms-sample">
                        <div class="form-group">
                            <select class="form-control" name="status" id="status">
                                <option value="">Change status</option>
                                <option value="in_progress">In Progress</option>
                                <option value="completed">Completed</option>
                                <option value="cancelled">Cancelled</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="changeStatus">Submit</button>
                </div>
            </div>
        </div>
    </div>
        
        

        <%- include( 'partials/appsmodal.ejs' ) %>

        
        <%- include( 'partials/scripts.ejs' ) %>

    </body>
</html>
